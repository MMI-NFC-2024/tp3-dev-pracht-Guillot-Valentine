---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <h1 class="text-2xl mb-4">Navigation Pingouins</h1>

  <nav class="mt-6 flex justify-center gap-4">
    <a
      href="/species/Adelie"
      target="viewer"
      class="px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition"
    >
      Adelie Penguins
    </a>
    <a
      href="/species/Chinstrap"
      target="viewer"
      class="px-4 py-2 rounded-lg bg-yellow-600 text-white hover:bg-yellow-700 transition"
    >
      Chinstrap Penguins
    </a>
    <a
      href="/species/Gentoo"
      target="viewer"
      class="px-4 py-2 rounded-lg bg-red-600 text-white hover:bg-red-700 transition"
    >
      Gentoo Penguins
    </a>
  </nav>

  <iframe
    src="/species/Adelie"
    name="viewer"
    id="penguinFrame"
    width="100%"
    height="600px">
</iframe>
</Layout>

<style>
  h1 {
    text-align: center;
    font-family: Arial, sans-serif;
    color: #333;
  }
</style>
